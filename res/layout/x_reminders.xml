<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+x_reminders/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment class="com.ch3d.xreminderx.fragment.RemindersListFragment"
        android:id="@+x_reminders/fragment_reminders_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
   	<LinearLayout
   	    android:background="#77000000" 
   	    android:layout_gravity="bottom"
   	    android:layout_width="match_parent"
   	    android:layout_height="48dp">
		<EditText android:id="@android:id/edit"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="match_parent"
		    android:hint="@string/quick_reminder_text"
		    android:textColorHint="?android:attr/textColorSecondaryInverse"
		    android:textColor="?android:attr/textColorPrimaryInverse"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<ImageButton android:id="@android:id/button1" 
		    style="@android:style/Widget.Holo.Button.Borderless"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:src="@drawable/ic_done"/>
   	</LinearLayout>
</FrameLayout>
