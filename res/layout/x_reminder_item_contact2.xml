<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".RemindersList$DummySectionFragment" >
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="4dp"
        android:background="@drawable/bg_reminder_item">
   	    <ImageView 
	        android:id="@+x_reminder_item_contact/img"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_width="128dp" 
	        android:layout_height="128dp"
	        android:src="@drawable/ic_contact_picture"
	        android:scaleType="fitXY" />
        <TextView
            android:id="@+x_reminder_item_contact/txt_msg"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+x_reminder_item_contact/img"
            android:layout_above="@+x_reminder_item_contact/delimiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to Ajax"
            android:ellipsize="end"
            android:maxLines="4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_light" />
		<View 
	        android:id="@+x_reminder_item_contact/delimiter"
	        android:layout_below="@+x_reminder_item_contact/img"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#22000000" />
	    <RelativeLayout 
	        android:id="@+x_reminder_item_contact/bottom_menu"
	        android:layout_below="@+x_reminder_item_contact/delimiter"
	        android:layout_width="match_parent"
	        android:layout_height="?android:attr/actionBarSize">
			<View android:id="@+x_reminder_item_contact/color"
			    android:layout_alignParentLeft="true" 
			    android:layout_alignParentTop="true"
			    android:layout_alignParentBottom="true"
		        android:layout_width="16dp"
		        android:layout_height="match_parent" />
			<View 
		        android:id="@+x_reminder_item/colorDelimiter"
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@+x_reminder_item_contact/color"
		        android:background="#22000000"/>
	       	<TextView
				android:id="@+x_reminder_item_contact/txt_datetime"
	           	android:padding="10dp"
	           	android:layout_toRightOf="@+x_reminder_item_contact/color"
				android:layout_centerVertical="true"	           
				android:layout_width="wrap_content"
	           	android:layout_height="wrap_content"
	           	android:text="Today 12:34"
	           	android:textAppearance="?android:attr/textAppearanceMedium"
	           	android:textColor="@android:color/secondary_text_light"
	           	android:fontFamily="sans-serif-thin"/>
