<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:id="@+x_reminder_item/root"
	    android:layout_width="match_parent"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:layout_height="?android:attr/listPreferredItemHeight">
	    <ImageView
			android:id="@+x_reminder_item/icon"        
	        android:layout_toRightOf="@+x_reminder_item/color"
	        android:layout_alignParentTop="true"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="4dp"
	        android:paddingRight="4dp"
	        android:src="@drawable/ic_event"
	        android:visibility="gone" />
	    <ImageView
			android:id="@+x_reminder_item/icon_type"
			android:layout_alignLeft="@+x_reminder_item/icon"
			android:layout_below="@+x_reminder_item/icon"        
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="4dp"
	        android:paddingRight="4dp"
	        android:src="@drawable/ic_reminder_type"
	        android:visibility="gone" />
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+x_reminder_item/delimiter"
	        android:layout_toRightOf="@+x_reminder_item/icon"
	        android:layout_width="match_parent"
	        android:layout_height="?android:attr/listPreferredItemHeightLarge">
	        <TextView
		        android:id="@+x_reminder_item/text"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:gravity="bottom"
		        android:fontFamily="sans-serif-light"
		        android:layout_height="0dp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		    <TextView
		        android:id="@+x_reminder_item/date"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:gravity="top"
		        android:fontFamily="sans-serif-thin"
		        android:layout_height="0dp"
		        android:textAppearance="?android:attr/textAppearance" />
	    </LinearLayout>
	</RelativeLayout>
</FrameLayout>