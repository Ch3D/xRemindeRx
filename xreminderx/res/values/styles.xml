<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:listPreferredItemHeightLarge">@dimen/list_item_height</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:absListViewStyle">@style/ListView</item>
    </style>

    <style name="Text.Header" parent="@android:style/Widget.TextView">
        <item name="android:background">?android:attr/textColorHighlight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!-- <style name="Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center</item>
	</style> -->

    <style name="SpinnerItem" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListView" parent="@android:Widget.ListView">
        <item name="android:padding">48dp</item>
        <item name="android:layout_marginLeft">48dp</item>
    </style>

    <style name="View"/>

    <style name="View.Container">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="View.Container.Color">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="View.Delimiter"/>

    <style name="View.Delimiter.Horizontal">
        <item name="android:background">?android:attr/textColorHighlight</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
</resources>